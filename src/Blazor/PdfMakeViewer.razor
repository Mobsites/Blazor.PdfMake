@inherits StatefulComponent

<main class="pdfmake-viewer">
    <div class="pdfmake-viewer-layout">
    <header class="pdfmake-viewer-header">
        <h1 @ref="Title" id="title"></h1>
    </header>

    <div @ref="Container" id="pdfmake-viewer-container">
        <div id="viewer" class="pdfViewer"></div>
    </div>

    <div id="loadingBar">
        <div class="progress"></div>
        <div class="glimmer"></div>
    </div>

    <div @ref="ErrorWrapper" id="errorWrapper" hidden="true">
        <div id="errorMessageLeft">
        <span @ref="ErrorMessage" id="errorMessage"></span>
        <button @ref="ErrorShowMore" id="errorShowMore">
            More Information
        </button>
        <button @ref="ErrorShowLess" id="errorShowLess">
            Less Information
        </button>
        </div>
        <div id="errorMessageRight">
        <button @ref="ErrorClose" id="errorClose">
            Close
        </button>
        </div>
        <div class="clearBoth"></div>
        <textarea @ref="ErrorMoreInfo" id="errorMoreInfo" hidden="true" readonly="readonly"></textarea>
    </div>

    <footer>
        <button @ref="Previous" class="toolbarButton pageUp" title="Previous Page" id="previous"></button>
        <button @ref="Next" class="toolbarButton pageDown" title="Next Page" id="next"></button>

        <input @ref="PageNumber" type="number" id="pageNumber" class="toolbarField pageNumber" value="1" size="4" min="1">

        <button @ref="ZoomOut" class="toolbarButton zoomOut" title="Zoom Out" id="zoomOut"></button>
        <button @ref="ZoomIn" class="toolbarButton zoomIn" title="Zoom In" id="zoomIn"></button>
    </footer>
</div>
</main>